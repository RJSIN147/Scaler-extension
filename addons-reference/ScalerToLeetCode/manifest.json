{
    "manifest_version": 3,
    "name": "Scaler \u2192 LeetCode Problem Checker",
    "version": "1.0",
    "description": "Checks if the current Scaler problem exists on LeetCode.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://leetcode.com/*",
        "https://*.google.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.scaler.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Check LeetCode Problem"
    },
    "icons": {
        "16": "icons/icon16.svg",
        "48": "icons/icon48.svg",
        "128": "icons/icon128.svg"
    }
}