{
  "manifest_version": 3,
  "name": "Scaler++",
  "version": "1.6.2",
  "description": "Enhance Scaler Academy: Declutter UI, search 1000+ problems instantly & get instant LeetCode links with smart caching",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "tabs",
    "identity"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://www.google.com/*",
    "*://scaler.com/*",
    "*://www.scaler.com/*",
    "*://*.scaler.com/*",
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "47969293968-eeacp3p89r5l6jslf3re48iimcgj3mo1.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.events"
    ]
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Scaler++ Settings"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.scaler.com/*",
        "https://scaler.com/*"
      ],
      "js": [
        "content/cleaner/selectors.js",
        "content/core/settings.js",
        "content/core/styleInjector.js",
        "content/utils/domUtils.js",
        "content/utils/stringUtils.js",
        "content/features/leetcodeLink.js",
        "content/cleaner/cleanerEngine.js",
        "content/cleaner/modalHandler.js",
        "content/cleaner/sidebarHandler.js",
        "content/core/urlObserver.js",
        "content/features/problemSearch.js",
        "content/features/practiceMode.js",
        "content/features/joinClassButton.js",
        "content/features/subjectSort.js",
        "content/features/googleCalendarSync.js",
        "content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/leetcode_icon.png"
      ],
      "matches": [
        "https://www.scaler.com/*",
        "https://scaler.com/*"
      ]
    }
  ]
}